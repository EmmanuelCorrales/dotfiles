alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias jj='jobs'
alias rm='rm -i'
alias xp='xclip -o'
alias xc='xclip -sel clipboard'

alias dotfiles='git --git-dir=$DOTFILES --work-tree=$HOME $@'
