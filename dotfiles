#!/bin/bash

# Install Homebrew
echo "Installing Homebrew..."
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install tig tree

# Install Tmux.
echo "Installing tmux..."
brew install tmux
if [ -f ~/.tmux.conf ]; then
  echo "Removing prevoius Tmux configuration..."
  rm ~/.tmux.conf
fi
ln -n .tmux.conf ~/.tmux.conf
echo "Tmux configured sucessfully."

# Install and configure GNU sed because OSX sed is not standard.
echo "Installing GNU sed..."
brew install gnu-sed
echo "" >>  ~/.bash_profile
echo "# GNU sed configurations." >> ~/.bash_profile
echo 'export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"' >> ~/.bash_profile
echo 'export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"' >> ~/.bash_profile


# BASH CONFIGURATIONS
echo "Configuring bash shell..."

if [ -f ~/.bash_aliases ]; then
  echo "Removing prevoius bash_aliases..."
  rm ~/.bash_aliases
fi
ln -n .bash_aliases ~/.bash_aliases

# Make .bash_profile load .bash_aliases aliases.
echo "" >>  ~/.bash_profile
echo "# Load aliases form .bash_aliases." >>  ~/.bash_profile
echo "if [ -f ~/.bash_aliases ]; then" >>  ~/.bash_profile
echo ". ~/.bash_aliases" >>  ~/.bash_profile
echo "fi" >>  ~/.bash_profile

. ~/.bash_profile
